<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon  id="plugin.video.mezzmo" name="Mezzmo" version="2.2.0.8" provider-name="Conceiva">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>    
  <extension point="xbmc.python.pluginsource" 
               library="default.py">
        <provides>video audio image</provides>
  </extension>
  
  <extension point="xbmc.service" library="service.py"/>

  <extension point="xbmc.python.library" 
               library="resources/lib/utilities.py"/>

  <extension point="kodi.context.item">
    <menu id="kodi.core.main">
      <item library="resources/lib/context.py">
          <label>30435</label>
          <visible>[String.IsEqual(ListItem.dbtype,episode) | String.IsEqual(ListItem.dbtype,movie) | String.IsEqual(ListItem.dbtype,tvshow) | String.IsEqual(ListItem.dbtype,musicvideo)] + !String.IsEqual(Container.PluginName,plugin.video.mezzmo) + [[Addon.SettingBool(plugin.video.mezzmo, knative) | String.StartsWith(System.BuildVersionShort, 19)]]</visible>
      </item>
    </menu>
  </extension>

  <extension point="xbmc.addon.repository" name="Mezzmo Repository">
    <dir minversion="19.0.0">
      <info>https://raw.githubusercontent.com/Conceiva/MezzmoKodiPlugin/manifests/kodi-19.xml.gz</info>
      <checksum>https://raw.githubusercontent.com/Conceiva/MezzmoKodiPlugin/manifests/kodi-19.xml.gz.sha256</checksum>
      <datadir>https://github.com/Conceiva/MezzmoKodiPlugin/releases/download</datadir>
      <hashes>sha256</hashes>
    </dir>
  </extension>
  
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>1</minversion>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
    <summary lang="en_GB">Browse and play local video, music and photo media files managed by Mezzmo Media Server. </summary>
    <description lang="en_GB">Browse and play local video, music and photo media files managed by Mezzmo Media Server.</description>
    <summary lang="pt_BR">Navegue e reproduza arquivos de mídia locais de vídeo, música e foto gerenciados pelo Mezzmo Media Server.</summary>
    <description lang="pt_BR">Navegue e reproduza arquivos de mídia locais de vídeo, música e foto gerenciados pelo Mezzmo Media Server.</description> 
  </extension>
</addon>
